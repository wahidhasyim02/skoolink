{{- $pages := where .Site.RegularPages "Section" "posts" -}}
[
{{- range $i, $page := $pages -}}
  {{- if gt $i 0 }},{{ end }}
  {
    "permalink": {{ $page.RelPermalink | jsonify }},
    "title": {{ $page.Title | jsonify }},
    "image": {{ $page.Params.image | default "/images/default.png" | jsonify }}
  }
{{- end }}
]
